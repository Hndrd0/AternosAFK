# Aternos Server Configuration Template
# Copy this to .env and update with your server details

# REQUIRED: Replace with your Aternos server address
MC_HOST=yourserver.aternos.me
MC_PORT=25565

# Bot Configuration
MC_USERNAME=AFKBot
MC_AUTH=offline

# Optimized for Aternos (slower intervals to avoid detection)
MOVEMENT_INTERVAL=45000
RANDOM_MOVEMENT=true
CHAT_RESPONSES=true

# Conservative reconnection settings for Aternos
AUTO_RECONNECT=true
RECONNECT_DELAY=10000
MAX_RECONNECT_ATTEMPTS=infinite

# Logging
LOG_LEVEL=info
LOG_CHAT=true

# Human-like behavior (important for Aternos)
HUMAN_LIKE_DELAYS=true
RANDOM_LOOK_AROUND=true
JUMP_OCCASIONALLY=true

# UptimeRobot Settings
UPTIME_PORT=5000

# Example configurations:

# For Aternos server named "myserver123":
# MC_HOST=myserver123.aternos.me

# For Aternos server with custom domain:
# MC_HOST=play.mycustomdomain.com
# MC_PORT=25565

# IMPORTANT NOTES:
# 1. Aternos servers MUST use offline authentication (MC_AUTH=offline)
# 2. Using AFK bots violates Aternos Terms of Service
# 3. Your Aternos account WILL be suspended if detected
# 4. Only use on servers you own or have permission